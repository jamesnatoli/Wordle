# Class to hold information about individual letters
# James Natoli, 2022

class letter:
    def __init__(self):
        text = ''
        color = ''
        position = 0

    def __init__(self, t1, p1, c1='red'):
        self.text = t1
        self.position = p1
        self.color = c1
        
    def getPos( self):
        return self.position

    def getText( self):
        return self.text

    def getColor( self):
        return self.color

    def setColor( self, newcol):
        self.color = newcol
    
    def print( self):
        getText( self)
